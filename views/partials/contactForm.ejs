<h2>Send me a message:</h2>
<div id="contact-form-div">
  <form id="contact-form" action="/contact" method="post">
    <div class="form-group">
      <input
        type="text"
        class="form-control"
        id="name"
        name="name"
        required
        placeholder="Name:"
      />
    </div>
    <div class="form-group">
      <input
        type="email"
        class="form-control"
        id="email"
        name="email"
        required
        placeholder="Email:"
      />
    </div>
    <div class="form-group">
      <textarea
        class="form-control"
        id="message"
        name="message"
        rows="5"
        required
        placeholder="Type your message here.."
      ></textarea>
    </div>
    <button id="submit-btn" type="submit" class="btn btn-primary">
      Send Message
    </button>
  </form>
</div>
